# ─────────────────────────────────────────────────────────────────
# OpenAI Configuration
# ─────────────────────────────────────────────────────────────────
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIM=1536

# ─────────────────────────────────────────────────────────────────
# Voyage AI Configuration (Optional - for alternative embeddings)
# Get your API key from: https://dashboard.voyageai.com/
# ─────────────────────────────────────────────────────────────────
VOYAGE_API_KEY=
VOYAGE_EMBEDDING_MODEL=voyage-3
VOYAGE_EMBEDDING_DIM=1024

# ─────────────────────────────────────────────────────────────────
# Embedding Provider Selection ("openai" or "voyage")
# ─────────────────────────────────────────────────────────────────
EMBEDDING_PROVIDER=openai

# ─────────────────────────────────────────────────────────────────
# Qdrant Configuration
# ─────────────────────────────────────────────────────────────────
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=ideas

# ─────────────────────────────────────────────────────────────────
# RAG Configuration
# ─────────────────────────────────────────────────────────────────
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1024
